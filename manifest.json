{

  "manifest_version": 3,
  "name": "Block Journal",
  "description": "Ask yourself to write a short reflection each time you visit a website that you've decided you'd like to visit less",
  "version": "1.0.0",

  "icons": {   "16": "images/icon-active-16.png",
               "32": "images/icon-active-32.png",
               "48": "images/icon-active-48.png",
               "64": "images/icon-active-64.png",
              "128": "images/icon-active-128.png" },

  "permissions" : ["webRequest", "webRequestBlocking", "storage", "tabs", "http://*/*", "https://*/*", "notifications", "unlimitedStorage"],

 "background": {
    "scripts": ["js/redirect.js", "js/background.js"],
    "persistent": true
  },

  "options_ui": {
    "page": "popup.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": {
      "19": "images/icon-active-19.png",
      "38": "images/icon-active-38.png"
    },
    "default_title": "Block Journal",
    "default_popup": "popup.html"
  }
}
